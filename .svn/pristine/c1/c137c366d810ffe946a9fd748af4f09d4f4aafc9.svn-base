<script>
$( document ).ready(function() {
	
	
});
	

/* 등록/수정 화면으로 이동 */
function goTestMgmt() {
	location.href = "<c:url value='/mapo/sample/TestMgmt.do'/>";
}

/* 리스트 화면으로 이동 */
function goTestView() {
	location.href="<c:url value='/mapo/sample/TestView.do'/>";
}

/* ID 체인지 이벤트 */
function setPwd(user_id){
	
	if ( user_id == "admin" ) {
		$("#password").val("manager");
		
	} else if ( user_id == "guest" ) {
		$("#password").val("guest");
		
	} else if ( user_id == "guest2" ) {
		$("#password").val("guest2");
	}
}

/* Validation 체크 */
function check() {
	
	if ( $("#user_id").val() == "" ) {
		alert("아이디를 입력하세요");
		return false;
	}
	
	if ( $("#password").val() == "" ) {
		alert("비밀번호를 입력하세요");
		return false;
	}
}
	
</script>

</head>

<body id="page-top">

	<!-- Page Wrapper -->
	<div id="wrapper">

